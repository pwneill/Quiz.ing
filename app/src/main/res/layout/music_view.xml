<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="#D3D3D3"
    >

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/music_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/true_btn"
                android:layout_height="wrap_content"
                android:contentDescription="is-true"
                android:src="@drawable/true_img"></ImageButton>

            <ImageButton
                android:background="#fff"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/false_btn"
                android:layout_height="wrap_content"
                android:contentDescription="is-false"
                android:src="@drawable/false_img"></ImageButton>

        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>